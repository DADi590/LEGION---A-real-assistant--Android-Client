<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ActivitiesFragments.ActMain">

	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_perms"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Click here and on Back until you see the Desktop and nothing left to authorize" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_device_admin"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Open the Device Admins list" />

		<android.widget.Space
			android:layout_width="match_parent"
			android:layout_height="31dp" />

		<androidx.appcompat.widget.AppCompatEditText
			android:id="@+id/txt_to_speech"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:hint="Enter text to speak"
			android:inputType="textPersonName"
			android:text="This is an example." />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_speak_min"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Speak (min priority)" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_skip_speech"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Skip current speech" />

		<android.widget.Space
			android:layout_width="match_parent"
			android:layout_height="31dp" />

		<androidx.appcompat.widget.AppCompatEditText
			android:id="@+id/txt_to_send"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:hint="Text to send to the assistant"
			android:inputType="textPersonName"
			android:importantForAutofill="no"
			android:focusable="true"
			android:focusableInTouchMode="true" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_send_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Send text" />

		<android.widget.Space
			android:layout_width="match_parent"
			android:layout_height="31dp" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_force_stop"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Terminate app" />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/btn_tests"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="For testing" />

	</LinearLayout>

</androidx.core.widget.NestedScrollView>
